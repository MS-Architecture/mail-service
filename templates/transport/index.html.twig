{% extends 'base.html.twig' %}

{% block form_row -%}
    {%- if compound is defined and compound -%}
        {%- set element = 'fieldset' -%}
    {%- endif -%}
    {%- set widget_attr = {} -%}
    {%- if help is not empty -%}
        {%- set widget_attr = {attr: {'aria-describedby': id ~"_help"}} -%}
    {%- endif -%}
    <{{ element|default('div') }} class="form-group">
    <div class="input-group my-3">
        <div class="input-group-prepend w-25">
            {{- form_label(form, null, { label_attr: { class: 'input-group-text w-100'} }) -}}
        </div>
        {{- form_widget(form, widget_attr) -}}
        {{- form_help(form) -}}
    </div>
    </{{ element|default('div') }}>
{%- endblock form_row %}

{% block body %}

    <div class="row">
        <div class="col">
            <h3>Endpoint</h3>
            {% form_theme transportForm _self %}
            {{ form_start(transportForm, {method:'post', attr: {class: 'px-3 pt-1 pb-3 bg-light'}}) }}
            {{ form_row(transportForm.transportName) }}
            <hr/>
            {{ form_row(transportForm.transportProtocol, {attr: {class: 'custom-select'}}) }}
            {{ form_row(transportForm.transportPropertyHost) }}
            {{ form_row(transportForm.transportPropertyPort) }}
            {{ form_row(transportForm.transportEncryption, {attr: {class: 'custom-select'}}) }}
            <hr/>
            {{ form_row(transportForm.transportPropertyUsername) }}
            {{ form_row(transportForm.transportPropertyPassword) }}
            <div class="text-right">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
            {{ form_end(transportForm) }}



            <hr/>
            {# @var transportProperty \App\Entity\TransportProperty #}
            {% for transportProperty in transportProperties %}
                <ul class="list-group">
                    <li class="list-group-item">
                        {{ transportProperty.transport.name }}
                    </li>
                    <li class="list-group-item small py-1">
                        {{ transportProperty.transport.transportProtocol.description }},
                        {{ transportProperty.transport.transportEncryption.description }}
                    </li>
                    <li class="list-group-item small py-1">
                        Host: {{ transportProperty.host }}
                        Port: {{ transportProperty.port }}
                    </li>
                    {% if transportProperty.username %}
                    <li class="list-group-item small py-1">
                        User: {{ transportProperty.username }}
                    </li>
                    {% endif %}
                </ul>
            {% endfor %}
        </div>
        <div class="col">
            <h2>Transport</h2>
        </div>
        <div class="col">

        </div>
    </div>

    <div class="input-group my-3">
        <div class="input-group-prepend">
            <label class="input-group-text" for="transportType">Envelope</label>
        </div>
        <select class="custom-select" id="transportType">
            {# @var transportEnvelope \App\Entity\TransportEnvelope #}
            {% for transportEnvelope in transportEnvelopes %}
                <option value="{{ transportEnvelope.id }}">{{ transportEnvelope.description }}</option>
            {% endfor %}
        </select>
    </div>

{% endblock %}
